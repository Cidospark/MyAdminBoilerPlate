@{
    ViewBag.Title = "Not Found";
    Layout = "../Administration/_AdminLayout";
}


<!-- Content Wrapper. Contains page content -->
    <div class="">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>@ViewBag.Title</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">@ViewContext.RouteData.Values["controller"].ToString()</a></li>
                            <li class="breadcrumb-item active">@ViewContext.RouteData.Values["action"].ToString()</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <div class="row pl-3 pr-3">

            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->
                <div class="card card-primary card-outline">
                    <div class="card-body text-center p-5 ">
                        <p>
                            <i class="fa fa-exclamation-circle text-warning" style="font-size:15vh;"></i>
                        </p>
                        <h2>
                            @ViewBag.ErrorMessage
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>