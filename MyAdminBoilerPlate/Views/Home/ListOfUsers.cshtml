@model IEnumerable<MyAdminBoilerPlate.Models.User>
@{
    ViewBag.Title = "List of users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <table class="table">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var singleUser in Model)
            {
            <tr>
                <td>@singleUser.LastName</td>
                <td>@singleUser.FirstName</td>
                <td>
                    <div style="display:flex;">
                        <a href="#">Edit</a>
                        <span style="display:inline-block; width:50px; text-align:center;color:#ccc;"> | </span>
                        <a href="#">Delete</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
