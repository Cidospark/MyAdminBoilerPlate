@model IEnumerable<User>
@{
    ViewBag.Title = "List of users";
}
    <table class="table" cellspacing="20">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var singleUser in Model)
            {
            <tr>
                <td>@singleUser.LastName</td>
                <td>@singleUser.FirstName</td>
                <td>
                    <div style="display:flex;">
                        <a asp-controller="home" asp-action="Details" asp-route-id="@singleUser.UserId">View</a>
                        <span style="display:inline-block; width:20px; text-align:center;color:#ccc;"> | </span>
                        <a href="#">Edit</a>
                        <span style="display:inline-block; width:20px; text-align:center;color:#ccc;"> | </span>
                        <a href="#">Delete</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
