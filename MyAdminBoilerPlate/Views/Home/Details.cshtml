@model HomeDetailsViewModel
<!--
<title>@ViewData["Title"]</title>
<h1>@ViewData["Title"]</h1>
-->

@{
    ViewBag.Title = Model.pageTitle;
    var photoPath = "~/images/" + (Model.user.Photo ?? "pix1.jpg");
}
<h1>@Model.pageTitle</h1>

<ul style="list-style:none; padding-left:0px;">
    <li class="">Name : @Model.user.FirstName @Model.user.LastName</li>
    <li>PhoneNumber : @Model.user.PhoneNumber </li>
    <li>Nationality : @Model.user.Nationality </li>
    <li><img src="@photoPath" width="150" asp-append-version="true" /></li>
</ul>
<p>
<a style="color:#aaf; cursor:pointer;" id="backBtn">Go back</a>
</p>
@section Scripts{
    <script src="~/js/siteScript.js"></script>
}