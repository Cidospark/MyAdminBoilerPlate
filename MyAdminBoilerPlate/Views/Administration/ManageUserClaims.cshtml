@model UserClaimsViewModel

<form method="post">
    <div>
        <div>
            <h2>Manage User Claims</h2>
            <hr />
        </div>
        <div>
            @for(int i=0; i < Model.Claims.Count; i++)
            {
                <div>
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="" />
                    <label class="" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All"></div>
        </div>
        <div>
            <input type="submit" value="Update" class="" style="text-decoration:none; padding:5px; border:1px solid grey; border-radius:4px; width:auto;" />
            <a href="javascript:void()" onclick="window.history.back()" style="text-decoration:none; padding:5px; border:1px solid grey; border-radius:4px;">Cancel</a>
        </div>
    </div>
</form>