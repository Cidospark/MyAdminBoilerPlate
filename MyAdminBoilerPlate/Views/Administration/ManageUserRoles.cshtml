@model List<UserRolesViewModel>
@{
    var userId = ViewBag.userId;
}

    <form method="post">
        <div>
            <div><h2>Manage User Roles</h2></div>
            <hr />
        </div>
        <div>
            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" />
                    <label asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <br />
        <div>
            <input type="submit" value="Update" style="text-decoration:none; padding:5px; border:1px solid grey; border-radius:4px;" value="Update"/>
            <a href="javascript:void()" onclick="window.history.back()" style="text-decoration:none; padding:5px; border:1px solid grey; border-radius:4px;">Cancel</a>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
    </form>