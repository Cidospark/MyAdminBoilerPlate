@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
    Layout = "_AdminLayout";
}

    <div class="">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>@ViewBag.Title</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">@ViewContext.RouteData.Values["controller"].ToString()</a></li>
                            <li class="breadcrumb-item active">@ViewContext.RouteData.Values["action"].ToString()</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <div class="row pl-3 pr-3">

            <!-- left column -->
            <div class="col-sm-12">
                <!-- general form elements -->
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <b>Role Id : @Model.Id</b>
                        </h3>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <form method="post">
                                    <div class="">
                                        <div>
                                            <input asp-for="Id" hidden disabled class="" />
                                        </div>
                                    </div><br />
                                    <div>
                                        <label asp-for="RoleName"></label>
                                        <div>
                                            <input asp-for="RoleName" class="form-control col-md-8" />
                                            <span asp-validation-for="RoleName"></span>
                                        </div>
                                    </div>
                                    <div asp-validation-summary="ModelOnly"></div><br />
                                    <div style="display:flex;">
                                        <div>
                                            <button type="submit" class="btn btn-primary">Update</button>
                                            <a asp-action="ListRoles" class="btn btn-danger">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-6 mt-4">
                                <div>
                                    <div>
                                        <h4>Users in this role</h4>
                                    </div>
                                    <div>
                                        @if (Model.Users.Any())
                                        {
                                            <ol style="padding:15px;">
                                                @foreach (var user in Model.Users)
                                                {
                                                    <li style="padding:10px; border-top:1px solid grey;">@user</li>
                                                }
                                            </ol>
                                        }
                                        else
                                        {
                                            <hr />
                                            <h5>None at the moment</h5>
                                        }
                                    </div>
                                    <div>
                                        <a asp-action="EditRoleUsers" asp-controller="Administration" asp-route-roleId="@Model.Id"
                                           class="btn btn-primary">
                                            Add User | Remove Users
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                    </div>

                </div>
            </div>
        </div>
    </div>