@model ChangePasswordViewModel

@{ 
    ViewBag.Title = "Change Password";
    Layout = "../Administration/_AdminLayout";
}

<!-- Content Wrapper. Contains page content -->
<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">@ViewContext.RouteData.Values["controller"].ToString()</a></li>
                        <li class="breadcrumb-item active">@ViewContext.RouteData.Values["action"].ToString()</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="row pl-3 pr-3">

        <!-- left column -->
        <div class="col-12">
            <!-- general form elements -->
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Get a new password easily, just enter your old password and confirm new password.</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>

                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        <div class="form-group  mb-2">
                            <label asp-for="CurrentPassword"></label>
                            <input asp-for="CurrentPassword" placeholder="Current Password" class="form-control" />
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword" placeholder="New Password" class="form-control" />
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a onclick="window.history.back()" class="btn btn-danger text-white">Cancel</a>
                    </div>
                </form>
            </div>
            <!-- /.card -->

        </div>
    </div>
</div>