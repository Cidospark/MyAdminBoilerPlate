@{
    ViewBag.Title = "Account Lockedout";
    Layout = "../Account/_AccountLayout";
}


<div class="login-box">
    <div class="s-logo">
        <a href="#"><b> Admin </b> BoilerP</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <center>
            <i class="fa fa-lock text-teal m-5" style="font-size:70px;"></i>
            <p class="login-box-msg text-info">Your account is locked, please try again after sometime or you may.</p>

                <p class="mb-1">
                    <small>
                        <a asp-action="ForgotPassword" asp-controller="Account">
                            Reset your password by clicking here
                        </a>
                    </small>
                </p>
            </center>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>