@model CreateUserViewModel
@{ 
    ViewBag.Title = "Register | Dashboard BoilerP";
    Layout = "_AccountLayout";
}

    <div class="register-box mt-5">
        <div class="register-logo mt-5">
            <a href="#"><b> Dashboard </b> BoilerP</a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg text-info text-uppercase">Register a new membership</p>

                <form enctype="multipart/form-data" class="" method="post" asp-action="CreateUser" asp-controller="Account">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div><small><span asp-validation-for="LastName" class="text-danger"></span></small></div>
                    <div class="input-group mb-3">
                        <input asp-for="LastName" placeholder="Last Name" class="form-control" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div><small><span asp-validation-for="FirstName" class="text-danger"></span></small></div>
                    <div class="input-group mb-3">
                        <input asp-for="FirstName" placeholder="First Name" class="form-control" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>

                    <div><small><span asp-validation-for="Email" class="text-danger"></span></small></div>
                    <div class="input-group mb-3">
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div><small><span asp-validation-for="Password" class="text-danger"></span></small></div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div><small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small></div>
                    <div class="input-group mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <!--<span asp-validation-for="Gender"></span>-->
                    <div class="row">
                        <!--
                        <div class="col-8">
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="">---Select Gender---</option>
                            </select>
                        </div>
                        -->
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <br />
                <div class="social-auth-links text-center mb-3">
                    <p>- <small><b>OR USE QUICK REGISTER LINKS</b></small> -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> FACEBOOK
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> GOOGLE+
                    </a>
                </div>

                <a  asp-action="Login" asp-controller="Account"><small>Already a member? <span class="text-navy"><b>LOGIN</b></span></small></a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>