@model LoginViewModel
@{
    ViewBag.Title = "Login | Dashboard BoilerP";
    Layout = "_AccountLayout";
}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b> Dashboard </b> BoilerP</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg text-info text-uppercase">Sign in to your dashboard</p>

            <form method="post" asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="text-danger"><small><span asp-validation-for="Email"></span></small></div>
                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="text-danger"><small><span asp-validation-for="Password"></span></small></div>
                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <label asp-for="RememberMe" class="font-weight-lighter" style="margin-left:-30px;">
                                <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Log In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <br/>
            <div class="social-auth-links text-center mb-3">
                <p>- <small><b>OR USE QUICK LOGIN LINKS</b></small> -</p>
                <a href="#" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> FACEBOOK
                </a>
                <a href="#" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i> GOOGLE+
                </a>
            </div>
            <br/>
            <!-- /.social-auth-links -->

            <center>
                <p class="mb-1">
                    <small><a asp-action="ForgotPassword" class="text-black-50">Forgot Password?</a></small>
                </p>
                <p class="mb-0">
                    <small><a asp-action="CreateUser" asp-controller="Account" class="text-center">Register a new <b><span class="text-navy">MEMBERSHIP</span></b></a></small>
                </p>
            </center>
            
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->