@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password ";
    Layout = "_AccountLayout";
}

<div class="login-box">
    <div class="s-logo">
        <a href="#"><b> Admin </b> BoilerP</a>
    </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg text-info">Regain access to your account here, get a new password.</p>

                <form method="post">
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Request new password</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                
                <br/>
                <center>
                    <p class="mb-1">
                        <small><a asp-action="CreateUser" asp-controller="Account" class="text-center">Don't have an account yet? <b><span class="text-navy"> REGISTER</span></b></a></small>
                    </p>
                    <p class="mb-0">
                        <small><a asp-action="Login" asp-controller="Account">Already a member? <span class="text-navy"><b>LOGIN</b></span></a></small>
                    </p>
                </center>
            </div>
            <!-- /.login-card-body -->
        </div>
</div>
